<h1>ブログ一覧</h1>
  <p><%= notice %></p>
  
  <div class="all">
     <ul class="row center-block">
      <% @blogs.each do |blog| %>
        <li class= "box col-sm-6 col-sm-offset-1 col-sm-6">
          <p>タイトル: <%= blog.title %></p>
          <p>内容： <%= blog.content %></p>
          <%=link_to '記事を読む', blog_path(blog.id) %>
          <button type="button" class="btn btn-Warning" btn-sm><%= link_to "ブログを編集する", edit_blog_path(blog.id) %></button>
          <button type="button" class="btn btn-danger" btn-sm><%= link_to 'ブログを削除する', blog_path(blog.id),method: :delete ,data:{ confirm: '本当に削除してよろしいですか？'}  %></button>
        </li>
      <% end %> 
     </ul>
  </div>
</div>  