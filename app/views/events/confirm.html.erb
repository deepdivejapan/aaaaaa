<h3>以下の内容で、送信する。</h3>

  <div class="center">
    <%= bootstrap_form_for(@event,url: events_path,local:true)do |f|%>
      <%= f.hidden_field:title %>
      <%= f.hidden_field:content %>
      <%= f.hidden_field:place %>
      <%= f.hidden_field:event_date %>
      <%= f.hidden_field:image_cache, :size =>'320x320' %>
         
      <%= image_tag @event.image , :size =>'320x320' %>
      <h4><%= @event.title %></h4>
      <h5><%= @event.event_date %></h5>
      <h5><%= @event.place %></h5>
      <h5><%= @event.content %></h5>
    
      <div class="button">
        <input type="submit" type="button" class="far fa-envelope btn-success center-block"value="投稿する &#xf0e0" data-disable-with="投稿中...">
      </div>
    <% end %>
    
    <%= bootstrap_form_for(@event, url: new_event_path, local: true,method: 'get')do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field:place %>
      <%= f.hidden_field:event_date %>
      <%= f.hidden_field :image_cache %>
      
      <%= f.submit "戻る",class: 'btn btn-warning button', name: 'back' %>
    
    <% end %>  
  </div>    
    
    