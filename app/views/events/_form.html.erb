<% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= @event.errors.count %>件のエラーがあります。</h2>
      <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>

    <%= form_with(model: @event, local: true ,url: choose_new_or_edit) do |form| %>
      <ul class="form_content">
        <li class="event_form">
          <%= form.text_field :title, size: "50" , placeholder: "タイトル" %>
        </li>
        
        <li class="event_form">
          <%= form.text_field :event_date, size: "50" , placeholder: "開催日" %>
        </li>
        
        <li class="event_form">
          <%= form.text_field :place, size: "50" , placeholder: "開催場所" %>
        </li>
      </ul>
        <li class="event_content">  
          <%= form.text_area :content, size: "50x10", placeholder: "内容" %>
        </li>
      
    
      <div class="center">
        <%= form.label :Image %>
        <%= image_tag(@event.image) if @event.image %>
        <center><%= form.file_field :image, :size =>'240x240', id: :image %></center>
      
      </div>
    
      
      <div class="button">
      <input type="submit" type="button" class="btn btn-success center-block"value="投稿する" data-disable-with="投稿中...">
      </div>
  
    <% end %>
