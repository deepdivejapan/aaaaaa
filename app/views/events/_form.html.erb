<div class="input-group small-devices form-inline center-block">
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <ul class="center">
        <% @event.add_error_event.each do |msg| %>
          <li><font color="#FF0000"><%= msg %></font></li>
          <% end %>
          </ul>
        </div>
    <% end %>

    <%= simple_form_for (@event) do |form| %>
        <li class="event_form">
        <p>Date:</p><%= form.date_field :event_date, size:"100"%>
        </li>
        
        <li class="event_form">
          <%= form.input :title, size: "50" , placeholder: "タイトル" %>
        </li>
        
        <li class="event_form">
          <%= form.input :place, size: "50" , placeholder: "開催場所" %>
        </li>
  
        <li class="event_form">  
          <%= form.input :content, size: "50x10", placeholder: "内容" %>
        </li>
      
    
      <div class="center">
        <%= form.label :Image %>
        <%= image_tag(@event.image) if @event.image %>
        <center><%= form.file_field :image, :size =>'240x240', id: :image %></center>
      
      </div>
    
      
      <div class="button">
      <input type="submit" type="button" class="btn btn-success center-block"value="投稿する" data-disable-with="投稿中...">
      </div>
  
    <% end %>
</div>